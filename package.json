{
  "name": "magic-lottery",
  "version": "0.1.1",
  "type": "module",
  "license": "MIT",
  "author": "logeast",
  "description": "A magic tool makes your lucky draws simpler.",
  "files": [
    "dist"
  ],
  "main": "./dist/magic-lottery.umd.cjs",
  "module": "./dist/magic-lottery.js",
  "exports": {
    ".": {
      "import": "./dist/magic-lottery.jd",
      "require": "./dist/magic-lottery.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint --cache .",
    "release": "bumpp package.json --commit --push --tag && git update-ref refs/heads/release refs/heads/main && git push origin release && pnpm publish --access public"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.8",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vitest/coverage-v8": "^0.33.0",
    "bumpp": "^9.1.1",
    "eslint": "^8.45.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vitest": "^0.33.0"
  }
}
