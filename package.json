{
  "name": "magic-lottery",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT",
  "author": "logeast",
  "description": "A magic library makes your lucky draws simpler.",
  "homepage": "https://github.com/logeast/magic-lottery",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/logeast/magic-lottery.git"
  },
  "keywords": [
    "lottery",
    "Fisher-Yates Shuffle",
    "magic lottery",
    "lucky",
    "random",
    "shuffle",
    "raffle",
    "prize",
    "winner"
  ],
  "main": "./dist/main.umd.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint --cache .",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "release": "bumpp package.json --commit --push --tag && git update-ref refs/heads/release refs/heads/main && git push origin release && pnpm publish --access public",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@vitest/coverage-v8": "^0.34.1",
    "bumpp": "^9.1.1",
    "eslint": "^8.46.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.4.0",
    "vitepress": "1.0.0-beta.7",
    "vitest": "^0.34.1"
  }
}